<UserControl x:Class="YoutubeUploader.UC_queue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YoutubeUploader"
             mc:Ignorable="d" 
             xmlns:ui="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="30">
    <Border Background="#e6e6e6" CornerRadius="5" BorderThickness="1.5" BorderBrush="#adadad" Margin="2.5,0,2.5,5">
        <Border.Effect>
            <DropShadowEffect Direction="270" ShadowDepth="1.7" BlurRadius="7" Opacity="0.3"/>
        </Border.Effect>
        <Grid>
            <TextBox x:Name="tb_path" Margin="2,0,23,0" Foreground="#adadad" VerticalAlignment="Center" IsReadOnly="True" Style="{x:Null}" BorderThickness="0" Background="Transparent"/>
            <Button Click="btn_remove" HorizontalAlignment="Right" Height="22" Width="22" Content="X" FontSize="14" Padding="0,0,0,1" Foreground="#adadad" Background="#e6e6e6" BorderBrush="#adadad" ui:ButtonAssist.CornerRadius="5"/>
        </Grid>
    </Border>
</UserControl>
